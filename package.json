{
  "name": "@xarc/module-dev",
  "version": "1.0.0",
  "main": "index.js",
  "types": "dist/arch-clap.d.ts",
  "description": "Support for developing node.js modules with mocha/eslint/typescript",
  "scripts": {
    "build": "tsc",
    "test": "clap -n xarc/test",
    "compile": "tsc",
    "prepublishOnly": "clap -n compile docs",
    "postinstall": "node install.js",
    "docs": "typedoc --excludeNotExported --out docs src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/electrode-io/module-dev.git"
  },
  "author": "Joel Chen",
  "license": "Apache-2.0",
  "files": [
    "config",
    "dist",
    "install.js"
  ],
  "keywords": [
    "node",
    "node.js",
    "npm",
    "module",
    "develop",
    "mocha",
    "eslint",
    "typescript"
  ],
  "dependencies": {
    "chai": "^4.2.0",
    "filter-scan-dir": "^1.0.10",
    "lodash": "^4.17.15",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "sinon": "^7.2.6",
    "sinon-chai": "^3.3.0",
    "xclap": "^0.2.43",
    "xsh": "^0.4.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/node": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-walmart": "^2.2.1",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typedoc": "^0.16.11",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "printWidth": 100
  },
  "engines": {
    "node": ">=10"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "./config/test/setup.js"
    ],
    "recursive": true
  },
  "nyc": {
    "extends": [
      "@istanbuljs/nyc-config-typescript"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "*clap.js",
      "*clap.ts",
      "coverage",
      "dist",
      "gulpfile.js",
      "test"
    ],
    "check-coverage": false,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": false
  }
}
